{
	"compilerOptions": {
		"target": "ES2015",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.hook.ts",
		"**/*.lib.ts",
		"**/*.model.ts",
		"**/*.connection.ts",
		"**/*.d.ts"
	],
	"exclude": ["node_modules"]
}
